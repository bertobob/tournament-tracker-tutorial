<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="tournament_tracker.Views.CreateTournamentView">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="3*"/>
			<ColumnDefinition Width="6*"/>
		</Grid.ColumnDefinitions>
		<Grid Grid.Column="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
			<TextBlock Text="Tournament Name" Grid.Row="0" VerticalAlignment="Center"/>
			<StackPanel Grid.Row="1">
				<TextBox Watermark="Enter Name" Height="20" />
			</StackPanel>

			<StackPanel Orientation="Horizontal" Grid.Row="2" VerticalAlignment="Center">
				<TextBlock Text="Entry Fee   " VerticalAlignment="Center"/>
				<TextBox Watermark="Enter Fee"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal" Grid.Row="3" >
				<TextBlock Text="Select Team or   " VerticalAlignment="Center"/>
				<Button>
					Create new
				</Button>
			</StackPanel>
			<ComboBox Grid.Row="4">				
			</ComboBox>
			<Button Grid.Row="5">
				Add Team
			</Button>
			<Button Grid.Row="6">
				Create Prize
			</Button>
			<Button Grid.Row="7">
				Create Tournament
			</Button>
		</Grid>

		<Grid Grid.Column="1" Margin="10">
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="4*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="4*"/>				
			</Grid.RowDefinitions>
			<TextBlock Text="Teams / Players" Grid.Row="0"/>
			<ListBox Grid.Row="1">
				<ListBoxItem Content="item1"/>
			</ListBox>
			<TextBlock Text="Prizes" Grid.Row="3"/>
			<ListBox Grid.Row="4">
				<ListBoxItem Content="item1"/>
			</ListBox>


		</Grid>
		
	</Grid>
 
</UserControl>
